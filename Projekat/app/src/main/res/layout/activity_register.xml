<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_gradient_top_down"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:id="@+id/wifi_image"
        android:src="@drawable/ic_outline_wifi_24"
        android:layout_marginTop="17dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_in"
        android:layout_below="@+id/wifi_image"
        android:text="@string/wifinder"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/register_imageView"
        android:layout_marginTop="15dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/register_in"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_imageView"
        android:id="@+id/register_upload_photo"
        android:layout_marginHorizontal="45dp"
        android:text="Upload photo"
        android:layout_marginTop="3dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/firstname"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:id="@+id/register_firstname"
        android:layout_below="@+id/register_upload_photo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lastname"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/register_firstname"
        android:id="@+id/register_lastname"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phonenumber"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/register_emailaddress"
        android:id="@+id/register_phonenumber"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/register_lastname"
        android:id="@+id/register_username"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/register_username"
        android:id="@+id/register_emailaddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/register_phonenumber"
        android:id="@+id/register_password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/register_password"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/register_btn"
        android:id="@+id/register_gotologin_textview"
        android:textAlignment="center"/>

</RelativeLayout>