<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/oneNotification_firstRelativeLayout"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/rang_rounded_corners"
        android:id="@+id/oneNotification_secondRelativeLayout">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/oneNotification_usersProfileImage"
            android:layout_margin="3dp"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="5dp"
            app:civ_shadow_color="#3f51b5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/oneNotification_usersUsername"
            android:layout_toRightOf="@+id/oneNotification_usersProfileImage"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/oneNotification_sentFriendRequest"
            android:layout_toRightOf="@+id/oneNotification_usersProfileImage"
            android:layout_below="@+id/oneNotification_usersUsername"
            android:text="Sent you friend request"
            android:textStyle="italic"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oneNotification_usersID"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:id="@+id/oneNotification_acceptRequest"
            android:layout_toRightOf="@+id/oneNotification_sentFriendRequest"
            android:src="@drawable/ic_baseline_check_24"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:id="@+id/oneNotification_declineFriendRequest"
            android:layout_toRightOf="@+id/oneNotification_acceptRequest"
            android:src="@drawable/ic_baseline_cancel_24"/>

    </RelativeLayout>


</RelativeLayout>